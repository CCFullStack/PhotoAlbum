@model string
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("UploadPhoto", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div>
        @Html.Label("photo.Title", "Title: ")
        @Html.TextBox("photo.Title", "", new { @class = "form-control", placeholder = "Photo Title" })
    </div>
    <div>
        @Html.Label("photo.Description", "Description: ")
        @Html.TextBox("photo.Description", "", new { @class = "form-control" })
    </div>
    <div>
        <input type="file" name="photo.File" id="file" class="form-control" />
        <input type="hidden" name="photo.Album" value="@Model" />
        <input type="submit" value="Upload" class="form-control" />
    </div>
}